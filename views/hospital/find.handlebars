



{{#section 'head'}}

	<script src="https://cdn.jsdelivr.net/npm/vue"></script>

{{/section}}


<div id="app">

<br><br><br><br><br><br>


<h2> <a @click="showAddress">지역별 검색</a> /  <a @click="showSubway">역 주변 병원 검색</a></h2>

<div v-show="addressRender">
	<label for="city">시</label>
	<select id="city" v-model="city">
	  <option value="서울특별시">서울특별시</option>
	</select>

	<label for="district">구</label>
	<select id="district" v-model="district">
		<option v-for="index in districtList">\{{index}}</option>
	</select>


	<label for="neighborhood">동</label>
	<select id="neighborhood" v-model="neighborhood">
		<option>선택없음</option>
	 	<option v-for="index in neighborList">\{{index}}</option>
	</select>

	<label for="subject">진료과목</label>
	<select id="subject" v-model="subject">
		<option>선택없음</option>
		<option v-for="index in subjectList">\{{index}}</option>
	</select>
	<a href="/subjectInfo">진료과목 선택이 어려우신가요? (Click!)</a>
</div>

<div v-show="subwayRender">
	<label for="subway">역 이름</label>
	<input id="subway" type="text" name="subway" v-model="subway"><button @click="searchSubway">검색</button>
</div>
  
<br><br><br>

<ul>
	<li v-for="hospital in hospitals">
		
		<p><a :href="hospitalInfoHref(hospital.id)">이름 : \{{ hospital.name }}</a></p>
		<p>번호 : \{{ hospital.tel }}</p>
		<p>주소 : \{{ fullAddress(hospital) }}</p>
		<p>진료과목 : <div v-for="subject in hospital.subject">\{{subject}}</div></p>
		<p>평일 : \{{ hospital.weekday }}</p>
		<p>토요일 : \{{ hospital.saturday }}</p>
		<p>일요일 및 공휴일 : \{{ hospital.holiday }}</p>
		<p>리뷰 : \{{ hospital.review }}</p>
		<hr><hr>

	</li>
</ul>

<div id="map" style="width:100%;height:400px;"></div>


</div>





{{#section 'jquery'}}

	<!-- For Hospital Data Ajax-->
	<script type="text/javascript" src="/js/api/hospital.js"></script>	
	<!-- Hospital Data들 모음 (City, District, NeighborHood)등-->
	<script type="text/javascript" src="/js/data/hospitalData.js"></script>
	<!-- Vue Controller 포함. -->
	<script type="text/javascript" src="/js/controllers/findController.js"></script>


{{/section}}





