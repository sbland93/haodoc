{{#section 'head'}}

	<link rel="stylesheet" href="/css/feed/feed.css">

{{/section}}

<div class="container sub" id="feed_app">

	{{!-- 검색 칸 --}}
	<div class="section-search">
		<div class="inner">
			<div class="box cf">
				<h2 class="fl">搜索{{!-- 검색 --}}</h2>
				<input type="text" class="fl" placeholder=" # 牙齿美白 # 肉毒素 ">{{!-- 치아미백, 보톡스 --}}
			</div>
		</div>
	</div>
	{{!-- /검색 칸 --}}

	{{!-- 피드 배너 --}}
	<div class="section-main sub feed">
		<div class="inner">
			<div class="slide-feed">
				<div class="swiper-container">
					
					<div class="swiper-wrapper">
						<div v-for="(banner, index) in banners" :class="'swiper-slide slide-0'+(index+1)">
							<a :href="banner.url" class="image vertical-middle">
								<img :src="'/images/banner/all/' + banner.bannerImage" alt="" class="pc">
								<img :src="'/images/banner/all/' + banner.mobileImage" alt="" class="mobile">
							</a>
						</div>
					</div>
					<div class="swiper-pagination"></div>
					<div class="swiper-button-next"></div>
    				<div class="swiper-button-prev"></div>

				</div>
			</div>
		</div>
	</div>
	{{!-- /피드 배너 --}}

	{{!-- 피드 섹션 --}}
	<div class="section-contents sub">
		<div class="inner cf">
			<div class="box-sub-content feed">
				
				<ul class="list-feed cf">

					<li v-for="(feed, index) in feeds">
						<a :href="feed.url">
							<div class="thubmail image vertical-middle">
								<img :src="'/images/feed/all/'+feed.feedImage" alt="" class="pc">
								<img :src="'/images/feed/all/'+feed.mobileImage" alt="" class="mobile">
							</div>

							<div class="text">

								<div class="title ellipsis sc">\{{feed.title}}</div>
								<div class="description ellipsis-multi sc">
									\{{feed.content}}
								</div>
								<ul class="list-tag cf">
									<li v-for="hashtag in feed.hashtags">#\{{hashtag}}</li>
								</ul>
								<div class="bottom cf">
									<div class="user fl cf">
										{{!-- <div class="icon image vertical-middle fl">
											<img src="/renew/images/img_user_default.png" alt="">
										</div> --}}
										<div class="info fl">
											{{!-- <div class="id">ID : HaoDoc1</div> --}}
											<div class="date">\{{feed.updated_at | moment}}</div>
										</div>
									</div>
									<div class="heart fr">
										{{!-- <label class="label-heart"><input type="checkbox">446</label> --}}
									</div>
								</div>
							
							</div>
						</a>
						
					</li>


				</ul>
			</div>
		</div>
	</div>
	{{!-- /피드 섹션 --}}


</div>


{{#section 'jquery'}}

	<script src="/renew/js/feed.js"></script>
	<script src="/js/api/feed.js"></script>
	<script src="/js/api/banner.js"></script>
	<script src="/js/controllers/feed/feedController.js"></script>

{{/section}}

