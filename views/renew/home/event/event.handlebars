				<div class="box-fold event active">
					<div class="title">相关活动{{!-- 이벤트 모아보기 --}}</div>
					<div class="content cf">
						<ul class="box-event">
							<li v-for="(product, index) in sortedList"
							:class="product.isCoupon? 'coupon': ''">
								<a v-if="product.isCoupon" :href="'/test/renew/coupon/'+product.id" class="cf">
									<div class="image vertical-middle fl">
										<img :src="'/images/coupon/all/'+product.thumbnailImage" alt="">
									</div>
									<div class="detail fr">
										<div class="cf">
											<span class="name">\{{product.hospitalName}}</span>
											<span class="date">\{{product.couponRange}}</span>
										</div>
										<div class="text sc">
											<div class="event ellipsis">\{{product.couponName}}</div>
											<div class="description ellipsis-multi">\{{product.subway}}</div>
										</div>
										<div class="bottom cf">
											<!--div class="view fl">720</div-->
											<div class="price fr">
												<!--div class="before">720000</div-->
												<div class="current">\{{product.price}}</div>
											</div>
										</div>
									</div>
								</a>
								<a v-if="!product.isCoupon" :href="'/test/renew/event/'+ product.id" class="cf">
									<div class="image vertical-middle fl">
										<img :src="'/images/event/all/' + product.thumbnailImage " alt="">
									</div>
									<div class="detail fr">
										<div class="cf">
											<span class="name">\{{product.hospitalName}}</span>
											<span class="date">\{{product.eventRange}}</span>
										</div>
										<div class="text sc">
											<div class="event ellipsis">\{{product.eventName}}</div>
											<div class="description ellipsis-multi">\{{product.subway}}</div>
										</div>
										<div class="bottom cf">
											<!--div class="view fl">720</div-->
											<div class="price fr">
												<!--div class="before">720000</div-->
												<div class="current">\{{product.price}}</div>
											</div>
										</div>
									</div>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>


<div class="fixed-right">
	<a href="javascript:;" class="btn-more"></a>
	<a href="javascript:;" class="btn-qr sc">咨 询</a>
</div>

