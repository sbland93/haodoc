

<div class="container sub" id="event_app">


	<div class="section-main sub">
		<div class="inner">
			<div class="slide-main">
				<div class="swiper-container">
					<div class="swiper-wrapper">
						<div v-for="(banner, index) in banners" :class="'swiper-slide slide-0'+(index+1)">
							<a href="javascript:;" class="image vertical-middle">
								<img :src="'/images/banner/all/' + banner.bannerImage" alt="" class="pc">
								<img :src="'/images/banner/all/' + banner.mobileImage" alt="" class="mobile">
							</a>
						</div>
					</div>
					<div class="swiper-pagination"></div>
					<div class="swiper-button-next"></div>
    			<div class="swiper-button-prev"></div>
				</div>
			</div>
		</div>
	</div>

	<div class="box-sub-category inner">
		<ul class="sub-category sub-category-05">
			<li><a href="javascript:;" class="active">전체</a></li>
			<li><a href="javascript:;">이벤트</a></li>
			<li><a href="javascript:;">바로구매</a></li>
		</ul>
	</div>

	<div class="section-contents sub">
		<div class="inner cf">
			<div class="box-sub-content">
				<div class="box-all">
					<div class="relative cf">
						<h2 class="fl"><span v-if="category">\{{category.categoryName}}</span><div v-else>전부</div></h2>
						<div class="swiper-container fl">
							<div class="swiper-wrapper">
								<div class="swiper-slide" v-for="(category, index) in categorys"><a href="javascript:;">\{{category.categoryName}}</a></div>
							</div>
						</div>
						<div class="swiper-button-next"></div>
					</div>
				</div>

				<div class="box-fold all first">
					<div class="title">눈 수술에 대한 모든것</div>
					<div class="content cf">
						<div class="icon fl">{{!-- <img :src="'/images/category/all/'+category.iconImage" alt=""> --}}<img src="/images/category/all/눈.png" alt=""></div>
						<div class="text fr">
							<ul>
								<li><span v-html="category.content_1"></span></li>
							</ul>
							<div class="description">
								<span v-html="category.content_2"></span>
							</div>
						</div>
					</div>
				</div>

				<div class="box-fold faq">
					<div class="title">눈 수술에 대해 많이 묻는 질문</div>
					<div class="content cf">
						<div v-for="(question, index) in category.questions">
							<div class="question"><span v-html="question.content"></span></div>
							<div class="answer">
								<span v-html="question.answer"></span>
							</div>
						</div>
					</div>
				</div>

				<div class="box-fold warning">
					<div class="title">수술전,후 주의사항</div>
					<div class="content cf">
						<div class="box-warning cf">
							<div class="step fl">전</div>
							<div class="text fr">
								<ul class="list-bullet">
									<li v-for="(caution, index) in category.caution_1">
										<span v-html="caution.content"></span>
									</li>
								</ul>
							</div>
						</div>
						<div class="box-warning cf">
							<div class="step fl">후</div>
							<div class="text fr">
								<ul>
									<li v-for="(caution, index) in category.caution_2">
										<div class="day">\{{caution.day}}</div>
										<div>
											<span v-html="caution.content"></span>
										</div>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>

				<div class="box-fold event active">
					<div class="title">이벤트 한눈에 모아보기~!</div>
					<div class="content cf">
						<ul class="box-event">
							<li v-for="(coupon, index) in coupons"><a :href="'/coupon/'+coupon.id" class="coupon cf">
								<div class="image vertical-middle fl">
									<img :src="'/images/coupon/all/'+coupon.thumbnailImage" alt="">
								</div>
								<div class="detail fr">
									<div class="cf">
										<span class="name">\{{coupon.hospitalName}}</span>
										<span class="date">\{{coupon.couponRange}}</span>
									</div>
									<div class="text sc">
										<div class="event ellipsis">\{{coupon.couponName}}</div>
										<div class="description ellipsis-multi">\{{coupon.subway}}</div>
									</div>
									<div class="bottom cf">
										<!--div class="view fl">720</div-->
										<div class="price fr">
											<!--div class="before">720000</div-->
											<div class="current">\{{coupon.price}}</div>
										</div>
									</div>
								</div>
							</a></li>
							<li v-for="(event, index) in events"><a :href="'/event/'+ event.id" class="cf">
								<div class="image vertical-middle fl">
									<img :src="'/images/event/all/' + event.thumbnailImage " alt="">
								</div>
								<div class="detail fr">
									<div class="cf">
										<span class="name">\{{event.hospitalName}}</span>
										<span class="date">\{{event.eventRange}}</span>
									</div>
									<div class="text sc">
										<div class="event ellipsis">\{{event.eventName}}</div>
										<div class="description ellipsis-multi">\{{event.subway}}</div>
									</div>
									<div class="bottom cf">
										<!--div class="view fl">720</div-->
										<div class="price fr">
											<!--div class="before">720000</div-->
											<div class="current">\{{event.price}}</div>
										</div>
									</div>
								</div>
							</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>


<div class="fixed-right">
	<a href="javascript:;" class="btn-more"></a>
	<a href="javascript:;" class="btn-qr sc">咨 询</a>
</div>

{{#section 'jquery'}}
	<script src="/js/api/event.js"></script>
	<script src="/js/api/coupon.js"></script>
	<script src="/js/api/banner.js"></script>
	<script src="/js/api/category.js"></script>
	<script src="/js/util/util.js"></script>
	<script type="text/javascript" src="/renew/js/controllers/eventController.js"></script>
{{/section}}


